<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="64dp"
    android:layout_marginBottom="20dp">

    <ImageView
        android:id="@+id/game_icon"
        android:layout_width="64dp"
        android:layout_height="match_parent"
        android:layout_marginStart="15dp"
        app:layout_constraintBaseline_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/game_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="15dp"
        android:text="Game Name"
        android:textColor="@color/black"
        android:textSize="42px"
        app:layout_constraintStart_toEndOf="@+id/game_icon"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/game_describe"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="15dp"
        android:text="游戏描述"
        android:textSize="28px"
        app:layout_constraintBottom_toTopOf="@+id/game_label_container"
        app:layout_constraintStart_toEndOf="@+id/game_icon"
        app:layout_constraintTop_toBottomOf="@+id/game_name" />

    <LinearLayout
        android:id="@+id/game_label_container"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="15dp"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@+id/game_icon"
        app:layout_constraintTop_toBottomOf="@+id/game_describe" />

    <Button
        android:id="@+id/download_button"
        android:layout_width="140px"
        android:layout_height="75px"
        android:layout_marginEnd="15dp"
        android:background="@drawable/rounded_button_background_search_page"
        android:text="秒玩"
        android:textColor="@color/black"
        android:textSize="34px"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"

        />

</androidx.constraintlayout.widget.ConstraintLayout>
