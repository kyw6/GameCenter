<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true">

    <ImageView
        android:id="@+id/image_no_search_result"
        android:layout_width="221.5dp"
        android:layout_height="119.4dp"
        android:src="@drawable/ic_no_search_result"
        android:layout_marginBottom="228.7dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <TextView
        android:id="@+id/textView_no_search_result"
        android:layout_width="221.5dp"
        android:layout_height="21.3dp"
        android:layout_marginTop="21.3dp"
        android:gravity="center"
        android:text="@string/no_search_results"
        android:textColor="@color/black"
        android:textSize="15.8sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/image_no_search_result"
        />

</androidx.constraintlayout.widget.ConstraintLayout>
