<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="15dp">

    <ImageView
        android:id="@+id/imageView_item_one_num"
        android:layout_width="168px"
        android:layout_height="168px"
        android:layout_marginBottom="10dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView_item_one_num"
        android:layout_width="260px"
        android:layout_height="48px"

        android:layout_marginStart="10dp"
        android:text="Sample Text"
        android:textColor="@color/black"
        android:textSize="42px"
        app:layout_constraintStart_toEndOf="@+id/imageView_item_one_num"
        app:layout_constraintTop_toTopOf="parent"

        />

    <LinearLayout
        android:id="@+id/game_label_container"
        android:layout_width="273px"
        android:layout_height="48px"
        android:layout_marginStart="10dp"
        android:orientation="horizontal"
        app:layout_constraintBottom_toTopOf="@+id/game_describe"
        app:layout_constraintStart_toEndOf="@+id/imageView_item_one_num"
        app:layout_constraintTop_toBottomOf="@+id/textView_item_one_num" />

    <TextView
        android:id="@+id/game_describe"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:text="游戏描述"
        android:textSize="36px"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@+id/imageView_item_one_num"
        app:layout_constraintTop_toBottomOf="@+id/game_label_container" />


    <Button
        android:id="@+id/download_button"
        android:layout_width="140px"
        android:layout_height="75px"
        android:layout_marginEnd="15dp"
        android:background="@drawable/rounded_button_background_search_page"
        android:text="秒玩"
        android:textColor="@color/black"
        android:textSize="34px"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"

        />

</androidx.constraintlayout.widget.ConstraintLayout>
