<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="297dp"
    android:layout_height="277dp"
    android:padding="0dp"
    android:layout_margin="0dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <TextView
        app:layout_constraintVertical_chainStyle="spread_inside"
        android:id="@+id/disclaimer_and_terms"
        android:layout_width="0dp"
        android:layout_height="61dp"
        android:gravity="center"
        android:layout_marginTop="30dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        app:layout_constraintBottom_toTopOf="@id/disclaimer_and_terms_detailed"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:text="@string/splash_disclaimer_and_terms"
        android:textSize="20dp"/>

    <TextView
        android:id="@+id/disclaimer_and_terms_detailed"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textSize="15dp"
        android:gravity="start"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        app:layout_constraintBottom_toTopOf="@id/disagree_button"
        android:textColor="@color/black"
        android:text="@string/splash_disclaimer_and_terms_detail" />
    <FrameLayout
        android:id="@+id/disagree_button"
        android:layout_width="297dp"
        android:layout_height="57dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@id/agree_button"
        android:clickable="true">
    <TextView
        android:layout_height="wrap_content"
        android:layout_width="297dp"
        android:layout_gravity="center"
        android:gravity="center"
        android:textSize="16dp"
        android:text="@string/splash_disagree"
        />
    </FrameLayout>

    <FrameLayout
        android:id="@+id/agree_button"
        android:layout_width="297dp"
        android:layout_height="57dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:clickable="true"
        android:background="@color/splash_yellow"
        >
    <TextView
        android:layout_height="wrap_content"
        android:layout_width="297dp"
        android:layout_gravity="center"
        android:gravity="center"
        android:textColor="@color/white"
        android:textSize="20dp"
        android:text="@string/splash_agree_and_use"   />

    </FrameLayout>




</androidx.constraintlayout.widget.ConstraintLayout>
